<mvc:View
    controllerName="com.te.project1.controller.covid.CovidPieChart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns="sap.m"
>
    <Page
        id="pie"
        showHeader="false"
        class="sapUiContentPadding"
    >


        <viz:VizFrame
            id="idVizFramePie"
            uiConfig="{applicationSet:'fiori'}"
            height='100%'
            width="100%"
            vizType='pie'
        >
            <viz:dataset>
                <viz.data:FlattenedDataset data="{/data/regional}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition
                            name="loc"
                            value="{loc}"
                        />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition
                            name="totalConfirmed"
                            value="{totalConfirmed}"
                        />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem
                    id='valueAxisFeed'
                    uid="size"
                    type="Measure"
                    values="totalConfirmed"
                />
                <viz.feeds:FeedItem
                    id='categoryAxisFeed'
                    uid="color"
                    type="Dimension"
                    values="loc"
                />
            </viz:feeds>
            <viz:dependents>
                <viz:Popover id="idPopOverPie" />
            </viz:dependents>
        </viz:VizFrame>
    </Page>
</mvc:View>
